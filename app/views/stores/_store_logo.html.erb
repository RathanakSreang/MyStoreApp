<div class="row carousel-holder">
  <div class="col-md-12">
    <% if @store.store_logos.size > 0 %>
      <div id="slider-carousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @store.store_logos.size.times do |n| %>
              <li data-target="#slider-carousel" data-slide-to="<%= n %>" class="<%=n!=0 ? "" : "active"%>"></li>
            <% end %>
          </ol>
          <div class="carousel-inner">
            <% n = 0 %>
            <% @store.store_logos.each do |logo| %>
              <div class="item <%= "active" if n == 0 %>">
              <% n = n + 1 %>
                <div class="col-sm-6">                  
                  <h3><%= logo.title %></h3>
                  <p><%= logo.description %> </p>
                  <%= link_to "Get It now", logo.link, class: "btn btn-primary pull-right" %>
                </div>
                <div class="col-sm-6">
                  <%= image_tag logo.logo.url, class: "img-responsive" %>
                </div>
              </div>
            <% end %>                          
            </div>
          <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
              <i class="fa fa-angle-left"></i>
            </a>
            <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
              <i class="fa fa-angle-right"></i>
            </a>
      </div>
    <% else %>
      <div class="col-sm-6">                  
        <h3>Welcome to <%= @store.name %></h3>
        <p>This store is about </p>
        <%#= link_to "Get It now", logo.link, class: "btn btn-primary pull-right" %>
      </div>
      <div class="col-sm-6">
        <%= image_tag "store/default_logo.png", class: "img-responsive" %>
      </div>    
  <% end %>

  </div>
</div>
