<div class="form-group">
  <%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :house_no, class: "form-control", placeholder: "House Number" %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :street_no, class: "form-control", placeholder: "Street Number" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.text_field :village, class: "form-control", placeholder: "Village/ Group" %>
</div>

<div class="form-group">
  <%= f.text_field :commune, class: "form-control", placeholder: "Commune/Sangkat" %>
</div>

<div class="form-group">
  <%= f.text_field :district, class: "form-control", placeholder: "District/Khan" %>
</div>

<div class="form-group">
  <%= f.select(:province_id,options_from_collection_for_select(Province.all, "id", "name", (f.object.province.nil? ? 1 : f.object.province.id)),{},{class: "form-control"}) %>
</div>
