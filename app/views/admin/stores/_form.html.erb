<%= form_for [:admin, @store], validate: true do |f| %>

  <%= render "shared/error_message", object: f.object %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= image_tag f.object.icon, class:"img-rounded img-responsive", id: "uploadPreview"  %>
        </div>
      </div>      
      <div class="form-group">          
        <%= f.file_field :icon, class: "form-control", id: "uploadImage", onchange:"PreviewImage();"%>
        <%= f.hidden_field :icon_cache %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "*Store Name", required: true %>
      </div>
      <%= f.fields_for :user_stores do |builder| %>
        <%= builder.hidden_field :user_id %>        
      <% end %>
      <%= f.fields_for :sub_domains do |builder| %>
        <div class="form-group">
          <%= builder.text_field :name, class: "form-control", placeholder: "Sub Domain" %>
        </div>
      <% end %>    
    </div>    
    </div>
    <div class="col-md-12">
      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    </div>    
  </div>  
<% end %>
