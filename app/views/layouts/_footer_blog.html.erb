<footer class="footer-distributed">
  <div class="footer-left">
    <h3><span><%= @store.name %></span></h3>
    <h3>Logo</h3>    
    <p class="footer-company-name">My Tob &copy; 2015</p>
  </div>
  <div class="footer-center">
    <div>
      <i class="fa fa-map-marker"></i>
      <p>
        <span>
          <%= @store.address.first_address %>,      
        </span>
        <%= @store.address.second_address %>        
      </p>      
    </div>
    <div>
      <i class="fa fa-phone"></i>
      <p><%= @store.address.phone %></p>
    </div>
    <div>
      <i class="fa fa-info-circle"></i>
      <p><%= link_to "About Us", about_path %></p>
    </div>
  </div>

  <div class="footer-right">    
    <div class="footer-icons">      
      <%= render "shared/social/facebook_icon", fb_link: @store.about.fb_link %>
      <%= render "shared/social/google_plus_icon", gg_link: @store.about.gg_link %>
      <%= render "shared/social/twitter_icon", tw_link: @store.about.tw_link %>
      <%= render "shared/social/linkedin_icon", in_link: @store.about.in_link %>      
    </div>    
  </div>
</footer>
