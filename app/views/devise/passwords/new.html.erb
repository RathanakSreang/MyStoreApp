<div class="row">
  <div class="col-md-4 col-md-offset-4 well well-sm">
    <legend><a href="#"><i class="glyphicon glyphicon-globe"></i></a> Forgot your password?</legend>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%#= devise_error_messages! %>
      <%= render "shared/error_message", object: f.object %>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "*Your Register Email", required: true %>
      </div>
      
      <div class="form-group">
        <%= f.submit "Send me reset password", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <hr/>
    <div class="row">
      <div class="col-md-6">
        <%= link_to "Sign Up", new_user_registration_path, class: "pull-left" %>
      </div>
      <div class="col-md-6">
        <%= link_to "Sign In", new_user_session_path, class: "pull-right" %>
      </div>
    </div>
  </div>
</div>
