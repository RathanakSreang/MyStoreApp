<div class="row">
  <div class="col-md-4 col-md-offset-4 well well-sm">
    <legend><a href="#"><i class="glyphicon glyphicon-globe"></i></a> Sign up here with!</legend>
    <div class="social-buttons">
      <center>
        <%= link_to raw('<i class="fa fa-facebook"></i> Facebook'), user_omniauth_authorize_path(:facebook), class: "btn btn-fb" %>
        <%= link_to raw('<i class="fa fa-twitter"></i> Twitter'), user_omniauth_authorize_path(:twitter), class: "btn btn-tw" %>
        <%= link_to raw('<i class="fa fa-google "></i> Google'), user_omniauth_authorize_path(:google_oauth2), class: "btn btn-google" %>
      </center>
    </div>
    <br/>
    <center>Or</center>
    <br/>
    <% resource.build_address if resource.address.nil? %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/error_message", object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "*Full Name", required: true %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "*Your Email", required: true %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "*New Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "*Confirm Password" %>
      </div>

      <div class="form-group">
        <%= f.label :birthday, "Birth Day" %>
        <div class="form-inline">
          <%= f.date_select :dob, {start_year: 5.year.ago.year, end_year: 1920,
            order: [:day, :month, :year], validate: false,
            prompt: { day: "Day", month: "Month", year: "Year" }},
            {class: "form-control selectwidthauto"} %>
        </div>
      </div>
      
      <div class="form-group">
          <%= f.label :gender, class: "radio-inline", value: :male do %>
            <%= f.radio_button :gender, :male, checked: true %>Male
          <% end%>
          <%= f.label :gender, class: "radio-inline", value: :female do %>
            <%= f.radio_button :gender, :female %>Female
          <% end%>
      </div>

      <%= f.fields_for :address do |builder| %>
        <div class="form-group">
          <%= builder.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-6">
              <%= builder.text_field :house_no, class: "form-control", placeholder: "House Number" %>
            </div>
            <div class="col-sm-6">
              <%= builder.text_field :street_no, class: "form-control", placeholder: "Street Number" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= builder.text_field :village, class: "form-control", placeholder: "Village/ Group" %>
        </div>

        <div class="form-group">
          <%= builder.text_field :commune, class: "form-control", placeholder: "Commune/Sangkat" %>
        </div>

        <div class="form-group">
          <%= builder.text_field :district, class: "form-control", placeholder: "District/Khan" %>
        </div>

        <div class="form-group">
          <%= builder.select(:province_id,options_from_collection_for_select(Province.all, "id", "name",1),{},{class: "form-control"}) %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <center>
      <%= link_to "Already have an account?", new_user_session_path %>
    </center>
  </div>
</div>
