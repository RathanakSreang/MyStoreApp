<div class="form-inline">
  <%= f.select :field_type, %w[text_field checkbox],{},{class: "form-control"} %>
  <%= f.text_field :name, class: "form-control", placeholder: "field name" %>
  <%= f.check_box :required, class: "form-control" %><%= f.label :required %>
  <%= f.hidden_field :_destroy %>
  <%= link_to_remove_fields "Remove", f %>
</div>
